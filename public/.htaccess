# Force HTTPS and redirect old domains

RewriteEngine On

# Redirect all old domain traffic to .ch

RewriteCond %{HTTP_HOST} ^(www\.)?aurumascend\.(ch)$ [NC]
RewriteRule ^(.\*)$ https://www.aurumascend.ch/$1 [R=301,L]

# Force HTTPS

RewriteCond %{HTTPS} off
RewriteRule ^(.\*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

# Force www subdomain

RewriteCond %{HTTP_HOST} ^aurumascend\.ch$ [NC]
RewriteRule ^(.\*)$ https://www.aurumascend.ch/$1 [R=301,L]

# Add security headers

Header always set X-Frame-Options SAMEORIGIN
Header always set X-Content-Type-Options nosniff
Header always set X-XSS-Protection "1; mode=block"
Header always set Referrer-Policy "strict-origin-when-cross-origin"

# Cache static assets

<FilesMatch "\.(css|js|png|jpg|jpeg|gif|ico|svg|woff|woff2|ttf|eot)$">
ExpiresActive On
ExpiresDefault "access plus 1 year"
Header append Cache-Control "public, immutable"
</FilesMatch>
