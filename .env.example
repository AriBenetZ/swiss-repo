# Facebook Domain Verification
FACEBOOK_DOMAIN_VERIFICATION=xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Additional tracking IDs
NEXT_PUBLIC_HOTJAR_ID=xxxxxxx
NEXT_PUBLIC_MIXPANEL_TOKEN=xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# LinkedIn Insight Tag
NEXT_PUBLIC_LINKEDIN_PARTNER_ID=xxxxxxx

# Twitter/X Pixel
NEXT_PUBLIC_TWITTER_PIXEL_ID=xxxxxxx

# Performance Monitoring
NEXT_PUBLIC_SENTRY_DSN=https://xxxxxxx@sentry.io/xxxxxxx

# A/B Testing
NEXT_PUBLIC_OPTIMIZELY_ID=xxxxxxxxx

# Conversion Tracking
NEXT_PUBLIC_FACEBOOK_PIXEL_ID=xxxxxxxxxxxxxxx
NEXT_PUBLIC_GOOGLE_ADS_ID=AW-xxxxxxxxxx

# Heat mapping and User Experience
NEXT_PUBLIC_FULLSTORY_ORG_ID=xxxxx
NEXT_PUBLIC_LOGROCKET_APP_ID=xxxxxx/xxxxx

# SEO Tools API Keys (for automated monitoring)
AHREFS_API_KEY=xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
SEMRUSH_API_KEY=xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
MOZ_ACCESS_ID=xxxxxxxxxxxxxxxx
MOZ_SECRET_KEY=xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Domain and URL Configuration
NEXT_PUBLIC_SITE_URL=https://www.aurumascend.ch
NEXT_PUBLIC_CANONICAL_URL=https://www.aurumascend.ch

# API Keys for Content Management
NEXT_PUBLIC_CONTENTFUL_SPACE_ID=xxxxxxxxxxxx
NEXT_PUBLIC_CONTENTFUL_ACCESS_TOKEN=xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Email Marketing (for lead magnets and SEO content)
MAILCHIMP_API_KEY=xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx-usX
MAILCHIMP_AUDIENCE_ID=xxxxxxxxxx

# Webhook endpoints for real-time SEO monitoring
WEBHOOK_SEO_ALERTS=https://hooks.slack.com/services/XXXXXXXXX/XXXXXXXXX/XXXXXXXXXXXXXXXXXXXXXXXX
WEBHOOK_PERFORMANCE_ALERTS=https://hooks.slack.com/services/XXXXXXXXX/XXXXXXXXX/XXXXXXXXXXXXXXXXXXXXXXXX

# Database for SEO analytics (if using custom tracking)
DATABASE_URL=postgresql://username:password@localhost:5432/aurumascend_analytics

# Redis for caching SEO data
REDIS_URL=redis://localhost:6379

# API rate limiting
RATE_LIMIT_MAX=1000
RATE_LIMIT_WINDOW=3600

# Security headers
CONTENT_SECURITY_POLICY="default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval' *.googletagmanager.com *.google-analytics.com *.clarity.ms; style-src 'self' 'unsafe-inline' fonts.googleapis.com; font-src 'self' fonts.gstatic.com; img-src 'self' data: https:; connect-src 'self' *.google-analytics.com *.analytics.google.com *.googletagmanager.com *.clarity.ms;"

# Production/Development Environment
NODE_ENV=production
